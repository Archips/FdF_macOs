#include "fdf.h"

void	ft_get_height(t_data *data, char *line, char *file, int index)
{
	char **tab;
	int	i;
	char *hex;

	tab = ft_split(line, ' ');
	i = 0;
	while (tab[i])
		i ++;
	data->width  = i;
	data->map[index] = (char **)malloc(sizeof(char *) * i);
	i = 0;
	while (tab[i])
	{
		data->map[index][i] = ft_strdup(tab[i]);
		printf("%s\n", data->map[index][i]);
		if (ft_atoi(data->map[index][i]) > data->max_map)
			data->max_map = ft_atoi(data->map[index][i]);
		if (ft_atoi(data->map[index][i]) < data->min_map)
			data->min_map = ft_atoi(data->map[index][i]);
		i ++;
	}
}

void	ft_init(char *file, t_data *data)
{
	int fd;
	char *line;

	fd = ft_open(file);
	line = get_next_line(fd);
	data->height = 0;
	while (line)
	{
		data->height ++;
		free(line);
		line = get_next_line(fd);
	}
	free(line);
}

void	ft_free_tab(char **tab)
{
	int	i;

	i = 0;
	while(tab[i])
	{
		free(tab[i]);
		i ++;
	}
	free(tab);
	tab = NULL;
}

char ***ft_read(char *file, t_data *data)
//void	ft_read(char *file, t_data *data)
{
	int	fd;
	int	i;
	char ***map;

/*	if (data->height < 1)
	{
		ft_putstr_fd("Invalid height of map", 2);
		exit(0);
	}*/
	map = (char***)malloc(sizeof(char **) * (data->height));
	if (!map)
		return NULL;
	i = 0;
	ft_init(file, data);
	fd = ft_open(file);
	while (i < data->height)
	{	
		ft_get_height(data, get_next_line(fd), file, i);
	//	map[i] = (char **)malloc(sizeof(char *) * (data->width));
	//	if (!map[i])
	//		return (ft_free_map(map, data, i), NULL);
	//	ft_fill(map, get_next_line(fd), i, data);
		i ++;
	}
	close(fd);
	return (map);
}
